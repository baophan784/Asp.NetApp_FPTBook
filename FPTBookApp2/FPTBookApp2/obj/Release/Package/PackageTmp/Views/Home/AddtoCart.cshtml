@model FPTBookApp2.Models.product
@{
    ViewBag.Title = "AddtoCart";
}
@using (@Html.BeginForm("AddtoCart", "Home", FormMethod.Post))
{
    <h2>Product Detail</h2>
    <div class="small-container single-product">
        <div class="row">
            <div class="col-2">
                <img src="~/Image/@Html.DisplayFor(model => model.ProImage)" width="100%" id="productImg">
            </div>
            <div class="col-2">
                <h1>@Html.DisplayFor(model => model.ProName)</h1>
                <h4>@Html.DisplayFor(model => model.ProPrice)$</h4>
                <input type="number" value="1" name="qty" min="1" max="@Model.ProQty" />
                <input class="btn" type="submit" value="Buy" />
                <h3>
                    Description
                    <i class="fa fa-indent"></i>
                </h3>
                <br>
                <p>
                    @Html.DisplayFor(model => model.ProDes)
                </p>

            </div>
        </div>
    </div>

}
